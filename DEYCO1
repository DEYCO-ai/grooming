<script>
function verificar(){
  const nombre = document.getElementById('nombre').value.trim();
  const curso = document.getElementById('curso').value.trim();
  const acepto = document.getElementById('acepto').checked;
  const mensaje = document.getElementById('mensaje');

  if(nombre === '' || curso === ''){
    alert('Por favor completa todos los campos.');
    return;
  }

  if(!acepto){
    alert('Debes aceptar para continuar.');
    return;
  }

  // Aquí podemos agregar la primera pista para avanzar
  mensaje.classList.remove('hidden');
  mensaje.innerHTML = `Hola ${nombre} de ${curso}. Si quieres avanzar, busca la palabra escondida en este mensaje: 
  ".: Gatos ROnronean Oscuramente Mientras INternet Gira :."`;
}
</script>
